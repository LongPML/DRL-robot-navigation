// Visualization using VNC
{
    // "build": {
    //     "dockerfile": "Dockerfile",
    //     "args": {
    //         // "USERNAME": "melodic"
    //     }
    // },
    "image": "longpml/navigate-robot:melodic-py3.8.10-torch1.10.0-cu111",
    "name": "navigate_robot_test",
    "remoteUser": "melodic",
    "privileged": true,
    "runArgs": [
        // "--network=host",
        // "--ipc=host",
        "--shm-size=1g"
        // "--gpus=all"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/melodic/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/home/melodic/${localWorkspaceFolderBasename}",
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "password": "0",
            "webPort": 6080,
            "vncPort": 5901
        }
    },
    "forwardPorts": [
        6080,
        5901
    ],
    "portsAttributes": {
        "6080": {
            "label": "Desktop (Web)"
        },
        "5901": {
            "label": "Desktop (VNC)"
        }
    }
}